<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_height="match_parent">

    <!--充值信息页-->
    <LinearLayout
        android:id="@+id/ll_extract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/a440"
                android:textColor="@color/f000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/title4"
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/tv_extract_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="@string/a186"
                android:textColor="@color/f333333"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                />

            <View
                style="@style/LineStyle"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/a180"
                android:textColor="@color/f000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/title"
                android:background="@null"
                android:hint="@string/a135"
                android:digits="0123456789."
                android:textSize="15sp"
                android:textCursorDrawable="@null" />

            <View
                style="@style/LineStyle"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/a136"
                android:textColor="@color/f000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_discovery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/title2"
                android:background="@null"
                android:textSize="15sp"
                android:hint="@string/a137"
                android:textCursorDrawable="@null" />

            <View
                style="@style/LineStyle"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/a138"
                android:textColor="@color/f000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/title3"
                android:background="@null"
                android:digits="0123456789"
                android:hint="@string/a139"
                android:textCursorDrawable="@null" />

        </RelativeLayout>


        <TextView
            android:id="@+id/bt_next"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/next"
            style="@style/button_style"
            />

    </LinearLayout>



    <!--发布成功页面-->
    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/ll_transfer_success"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/chenggong"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/a147"
            android:textSize="18sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="@string/a148"
            android:layout_marginTop="14dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:text="@string/a441"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>