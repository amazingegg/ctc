<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/part2"
    android:background="@color/bg"

    android:layout_height="match_parent">


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="@string/a536"
            android:padding="16dp"
            android:textSize="16sp"
            android:textColor="@color/f333333"/>


        <TextView
            android:id="@+id/tv_Remaining"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="---"
            android:textColor="@color/f333333"/>
    </RelativeLayout>

    <View
        style="@style/LineStyle"/>

    <TextView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:text="@string/a472"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@color/f333333"/>
    <View
        style="@style/LineStyle"/>




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
        android:id="@+id/yaoqingma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/a473"
        android:layout_centerVertical="true"
        android:textColor="@color/f333333"
        android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_invite"
            android:layout_toRightOf="@+id/yaoqingma"
            android:layout_width="match_parent"
            android:hint="@string/a474"
            android:background="@null"
            android:textSize="15sp"
            android:digits="0123456789"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/f888888"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:text="@string/a475"/>

    <TextView
        android:id="@+id/bt_next"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/next"
        style="@style/button_style" />







</LinearLayout>