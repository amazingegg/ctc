<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@drawable/close2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/a244"
                android:textColor="@color/f333333"
                android:textSize="20sp" />

            <View style="@style/LineStyle2"
                android:layout_marginTop="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/f333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_open_member"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="@string/a246"
                    android:textColor="@color/textColor2"
                    android:textSize="15sp" />

            </RelativeLayout>

            <View style="@style/LineStyle2" />

            <TextView
                android:background="@drawable/selector_item_press"
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/next"
                android:gravity="center"
                android:textColor="@color/f333333"
                android:textSize="18sp" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>